<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.ToDoHidromiel" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->

    </style>

    <!-- BASE THEME -->
    <style name="Theme.ToDoHidromiel" parent="Base.Theme.ToDoHidromiel">
        <item name="android:buttonStyle">@style/ButtonStyle</item>
        <item name="android:fontFamily">@font/kyivfont</item>
        <item name="spinnerStyle">@style/SpinnerStyle</item>
    </style>

    <!-- BUTTON STYLES -->
    <style name="ButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/btnText</item>
        <item name="android:textSize">@dimen/btn_text_size</item>
        <item name="android:layout_width">@dimen/btn_width</item>
        <item name="android:layout_height">@dimen/btn_height</item>
        <item name="strokeColor">@color/btnStroke</item>
        <item name="strokeWidth">@dimen/btn_stroke_width</item>
        <item name="android:background">@drawable/btn_state_pressed</item>
    </style>


    <!-- SPINNER STYLES -->
    <style name="SpinnerStyle" parent="Widget.AppCompat.Spinner">
        <item name="android:background">@drawable/stroke_background</item>
    </style>
</resources>