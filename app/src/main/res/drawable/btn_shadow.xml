<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">


    <!-- SHADOW -->
    <item android:left="0dp" android:right="0dp" android:top="0dp"
        android:bottom="0dp">
        <shape android:shape="rectangle">
            <solid android:color="#83FF9800"/>
            <corners android:radius="47dp"/>
        </shape>
    </item>

    <!-- Base button  -->
    <item android:left="0dp" android:right="2dp" android:top="0dp"
        android:bottom="3dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/btnBack" />
            <size android:width="@dimen/btn_width" android:height="@dimen/btn_height"/>
            <corners android:radius="47dp" />
            <stroke android:width="@dimen/btn_stroke_width" android:color="@color/btnStroke" />
        </shape>
    </item>

</layer-list>

